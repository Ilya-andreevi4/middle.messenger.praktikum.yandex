.button {
  box-sizing: border-box;
  margin: 0px 10px;
  font-size: 18px;
  line-height: 10px;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: 600;
  letter-spacing: 1.5;
  color: red;
  width: 280px;
  height: 37px;
  background: lightskyblue;
}

.button:hover {
  font-size: 20px;
}

.active {
  color: white;
  background: rgb(1, 29, 46);
}
