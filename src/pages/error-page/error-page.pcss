.error-page {
  display: flex;
  height: 100vh;
  width: 100%;
  color: rgba(255, 255, 255, 0.9);
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background: linear-gradient(234.11deg, #32383C 0%, rgba(90, 90, 90, 1) 100%);
}

.error-page__title {
  font-size: 40px;
  font-weight: 400;
  margin-bottom: 40px;
}

.error-page__text {
  font-size: 20px;
  margin-bottom: 64px;
}

.error-page__link {
  font-size: 11px;
  color: #0BB7DF;
}