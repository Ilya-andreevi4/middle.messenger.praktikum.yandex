.side-menu {
  position: absolute;
  z-index: 1000;
  top: 0;
  left: 0;

  display: flex;
  flex-direction: column;

  width: 288px;
  height: 100vh;

  background: $darker-bg;
}

.side-menu_display-none {
  display: flex;
}

@media (max-width: $mobile-width) {
  .side-menu {
    left: 0;
    width: 100%;
    height: 100%;
  }

  .side-menu_display-none {
    display: none;
  }
}

