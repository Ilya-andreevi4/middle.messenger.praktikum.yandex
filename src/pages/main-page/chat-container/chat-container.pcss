.chat-container {
  position: absolute;
  top: 0;
  left: 288px;

  display: flex;
  flex-direction: column;
  justify-content: space-between;

  width: calc(100vw - 288px);
  height: 100vh;

  background: $grey-bg;
}

.chat-container_display-none{
  display: flex;
}

@media (max-width: 500px) {
  .chat-container {
    left: 0;
    width: 100%;
    height: 100%;
  }

  .chat-container_display-none{
    display: none;
  }
}
