.chat-header {
  width: calc(100vw - 288px);
  height: 64px;
  display: none;
  justify-content: space-between;
  color: $white;
  box-shadow: 0px 1px 10px 3px rgba(0, 0, 0, 0.25);
}

.chat-header.chat-header_active {
  display: flex;
  background: $lighter-bg;
}

.chat-header__avatar {
  width: 64px;
}

.chat-header__icon {
  align-self: center;
  justify-content: end;
  margin-right: 8px;
}
