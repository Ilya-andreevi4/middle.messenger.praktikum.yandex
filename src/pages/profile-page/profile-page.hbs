<main class="container">
  {{{navBar}}}
  <div class="avatar-box profile-page__avatar-box">
    {{{avatar}}}
    <h2 class="title avatar-box__title">
      Change avatar
    </h2>
  </div>

  {{#if isChangeProfile}}
    {{{changeProfileForm}}}
  {{else}}
    {{#if isChangePassword}}
      {{{changePasswordForm}}}
    {{else}}
      {{{profileForm}}}
    {{/if}}
  {{/if}}
  {{#if modalIsOpen}}
    {{{changeAvatarModal}}}
  {{/if}}
  {{#if isLoading}}
    <div className="container container_darker">
      <div className="loader-ellipsis">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
      </div>
    </div>
  {{/if}}
  <div class="side-panel">
    {{{sideButton}}}
  </div>
</main>