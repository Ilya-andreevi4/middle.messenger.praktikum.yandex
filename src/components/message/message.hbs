<li>
  <div class="message {{#if my }}align-right{{/if}}">
    <div class="message-body message__message-body {{#if my }}align-right{{/if}}">
    {{!-- Если сообщение от пользователя: подпись "You" с иконкой о статусе письма --}}
      {{#if my }}
      <div class="name-box message__name-box">
        {{!-- {{> components/icon/icon src="static/media/Mail1.svg" className="message" alt="opened" }} --}}
        {{{ icon }}}
        <h2 class="friends-name message-body__friends-name message-body__friends-name_align-right">
          You
        </h2>
      </div>
      {{!-- Если сообщение от друга пользователя: в подписе имя и фамилия отправителя --}}
      {{else}}
        <h2 class="friends-name message-body__friends-name">
            {{ from }}
        </h2>
      {{/if}}
      {{#if image }}
      <div class="image-box message-body__image-box">
        {{{arrowDownIcon}}}
        <img class="image image-box__image" src={{ image }} alt="image"/>
        <span class="time-message image-box__time-message">
          {{ time }}
        </span>
      </div>
      {{/if}}
      {{#if text }}
        <p class="text {{ classNames }}__text">
          {{ text }}
        </p>
      {{/if}}
    </div>
    {{#unless image }}
      <span class="time-message message__time-message">
        {{ time }}
      </span>
    {{/unless}}
  </div>
</li>
