.message {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: flex-start;

  max-width: 100%;
  margin-bottom: 32px;
  padding: 24px 16px;
}

.align-right {
  align-items: flex-end;
  justify-content: flex-end;
}

.message-body {
  display: flex;
  flex-direction: column;
  gap: 8px;
  align-items: flex-start;
  justify-content: flex-start;

  max-width: 100%;
  padding: 8px 16px;

  background: linear-gradient(90deg, rgba(100 140 190 / 25%) 0%, rgba(80 200 255 / 25%) 100%);
  box-shadow: 3px 3px 10px rgba(35 35 35 / 30%), inset 0 0 60px rgba(15 30 80 / 30%);
}

.message-body.align-right {
  align-items: flex-end;
  justify-content: flex-end;
  background: linear-gradient(90deg, rgba(142 152 186 / 10%) 0%, rgba(192 219 255 / 10%) 100%);
  box-shadow: 3px 3px 10px rgba(35 35 35 / 30%), inset 0 0 60px rgba(150 140 180 / 30%);
}

.message__icon {
  width: 24px;
  height: 24px;
}

.name-box {
  display: flex;
  gap: 8px;
  align-items: center;
  justify-content: center;
}

.friends-name.message-body__friends-name {
  color: $accent-blue;
}

.message-body .message-body__friends-name_align-right {
  align-items: flex-end;
  justify-content: flex-end;
  color: $transparent-white;
}

.message__time-message {
  margin: 0 12px -20px;
}

.image-box {
  position: relative;

  overflow-y: hidden;
  display: flex;

  width: calc(100% + 32px);
  max-height: 400px;
  margin: 0 -16px;

  text-align: center;
}

.image-box__image {
  position: relative;
  z-index: 500;
  top: 0;
  left: 0;

  width: 100%;
  min-height: 400px;

  object-fit: cover;
}

.image-box__icon {
  position: absolute;
  z-index: 1000;
  top: 0;
  right: 0;

  width: 32px;
  height: 32px;

  background-color: rgb(0 0 0 / 10%);
}

.image-box__time-message {
  position: absolute;
  z-index: 1000;
  right: 12px;
  bottom: 4px;

  text-shadow: 0 0 1px rgb(35 35 35);
}
